{
  "name": "bmadboard",
  "version": "1.0.40",
  "description": "A beautiful sprint board for BMAD projects",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "DYLD_LIBRARY_PATH=\"$PWD/node_modules/sherpa-onnx-darwin-arm64:$PWD/node_modules/sherpa-onnx-darwin-x64:$DYLD_LIBRARY_PATH\" electron-vite dev",
    "preview": "electron-vite preview",
    "build": "electron-vite build",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:win": "electron-vite build && electron-builder --win",
    "build:linux": "electron-vite build && electron-builder --linux",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "postinstall": "bash scripts/fix-sherpa-rpath.sh"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@emotion/react": "^11.13.5",
    "@emotion/styled": "^11.13.5",
    "@git-diff-view/file": "^0.0.36",
    "@git-diff-view/react": "^0.0.36",
    "@mui/icons-material": "^6.3.0",
    "@mui/material": "^6.3.0",
    "anser": "^2.3.5",
    "bindings": "^1.3.0",
    "buffer-alloc": "^1.1.0",
    "debug": "^4.0.0",
    "execa": "^9.6.1",
    "file-uri-to-path": "0.0.1",
    "node-pty": "^1.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^16.1.0",
    "react-virtuoso": "^4.18.1",
    "remark-gfm": "^4.0.0",
    "say": "^0.16.0",
    "sherpa-onnx-node": "^1.12.23",
    "speaker": "^0.5.5",
    "uuid": "^13.0.0",
    "whisper-node": "^1.1.1",
    "yaml": "^2.6.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^5.0.0",
    "husky": "^9.1.7",
    "typescript": "^5.7.2",
    "vite": "^6.0.7",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.bmadboard.app",
    "productName": "BMad Board",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "extraResources": [
      {
        "from": "resources/models/kokoro-tts",
        "to": "models/kokoro-tts",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "resources/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "identity": "David Soyez (3SWR3Y8WU5)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "afterSign": "scripts/notarize.js",
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
